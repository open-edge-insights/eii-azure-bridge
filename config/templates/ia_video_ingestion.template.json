{
    "ia_video_ingestion": {
        "version": "1.0",
        "type": "docker",
        "status": "running",
        "restartPolicy": "always",
        "settings": {
            "image": "${DOCKER_REGISTRY}ia_video_ingestion:$EIS_VERSION",
            "createOptions": {
                "Hostname": "ia_video_ingestion",
                "Env": [
                    "AppName=VideoIngestion",
                    "DEV_MODE=$DEV_MODE",
                    "PROFILING_MODE=$PROFILING_MODE",
                    "no_proxy=localhost,127.0.0.1,$ETCD_HOST",
                    "ETCD_HOST=$ETCD_HOST",
                    "CertType=zmq",
                    "AML_TENANT_ID=$AML_TENANT_ID",
                    "AML_PRINCIPAL_ID=$AML_PRINCIPAL_ID",
                    "AML_PRINCIPAL_PASS=$AML_PRINCIPAL_PASS"
                ],
                "Volumes": {
                    "/dev": {},
                    "/EIS/sockets": {},
                    "/var/tmp": {}
                },
                "NetworkingConfig": {
                    "EndpointsConfig": {
                        "host": {}
                    }
                },
                "HostConfig": {
                    "Privileged": true,
                    "NetworkMode": "host",
                    "Devices": [
                        {
                            "PathOnHost": "/dev/dri",
                            "PathInContainer": "/dev/dri",
                            "CgroupPermissions": "rwm"
                        },
                        {
                            "PathOnHost": "/dev/",
                            "PathInContainer": "/dev/",
                            "CgroupPermissions": "rwm"
                        }
                    ],
                    "Binds": [
                        "/dev:/dev:rw",
                        "$EIS_INSTALL_PATH/sockets:/EIS/sockets:rw",
                        "/var/tmp:/var/tmp:rw"
                    ],
                    "LogConfig": {
                        "Type": "",
                        "Config": {}
                    },
                    "Mounts": [
                        {
                            "Target": "/run/secrets/ca_etcd",
                            "Source": "$EIS_CERTIFICATES/ca/ca_certificate.pem",
                            "Type": "bind",
                            "ReadOnly": true
                        },
                        {
                            "Target": "/run/secrets/etcd_VideoIngestion_cert",
                            "Source": "$EIS_CERTIFICATES/VideoIngestion/VideoIngestion_client_certificate.pem",
                            "Type": "bind",
                            "ReadOnly": true
                        },
                        {
                            "Target": "/run/secrets/etcd_VideoIngestion_key",
                            "Source": "$EIS_CERTIFICATES/VideoIngestion/VideoIngestion_client_key.pem",
                            "Type": "bind",
                            "ReadOnly": true
                        }
                    ]
                }
            }
        }
    }
}
